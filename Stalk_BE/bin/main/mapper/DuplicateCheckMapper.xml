<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Stalk.project.api.auth.duplicatecheck.dao.DuplicateCheckMapper">

  <!-- 1) 사용자 ID 중복 개수 조회 -->
  <select id="countByUserId" parameterType="string" resultType="int">
    SELECT COUNT(1)
    FROM users
    WHERE user_id = #{value}
  </select>

  <!-- 2) 닉네임 중복 개수 조회 -->
  <select id="countByNickname" parameterType="string" resultType="int">
    SELECT COUNT(1)
    FROM users
    WHERE nickname = #{value}
  </select>

</mapper>
